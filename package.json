{
  "name": "ext-link",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": "https://github.com/WeSyncVideo/ext-link.git",
  "author": "Right2Drive",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "yarn clean:dist",
    "clean:dist": "rimraf dist/",
    "clean:declarations": "rimraf dist/declarations",
    "clean:declarations:test": "rimraf dist/declarations/test",
    "copy:declarations": "copyfiles -u 2 \"dist/declarations/**/*\" dist/",
    "move:declarations": "yarn clean:declarations:test && yarn copy:declarations && yarn clean:declarations",
    "lint": "tslint -c tslint.json -p tsconfig.json \"src/**/*.ts\"",
    "test": "mocha ./test/**/*.spec.ts",
    "watch": "yarn build --watch",
    "build:pre": "yarn clean",
    "build:main": "cross-env WEBPACK_ENV=prod webpack",
    "build:post": "yarn move:declarations",
    "build": "yarn build:pre && yarn build:main && yarn build:post"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.54",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@types/chai": "^4.1.4",
    "@types/chrome": "^0.0.70",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.3",
    "@types/redux": "^3.6.0",
    "babel-loader": "^8.0.0-beta",
    "chai": "^4.1.2",
    "copyfiles": "^2.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.2.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "testdouble": "^3.8.1",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.2",
    "webpack-command": "^0.4.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0-beta.54"
  }
}
